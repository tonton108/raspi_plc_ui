# PostgreSQL 設定（Flask用）
POSTGRES_USER=plc_user
POSTGRES_PASSWORD=plc_pass
POSTGRES_DB=plc_monitor
POSTGRES_PORT=5432
DATABASE_URL=postgresql://plc_user:plc_pass@db:5432/plc_monitor

# Flask 設定
FLASK_ENV=development
FLASK_APP=manage.py
PGCLIENTENCODING=utf-8

# PLCエミュレーション（Flaskとplc_agentの両方で参照）
USE_DUMMY_PLC=true

# ラズパイ側（plc_agent.py用）
FLASK_API_URL=http://localhost:5000/api/logs